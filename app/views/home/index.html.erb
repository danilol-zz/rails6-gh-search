<section class="jumbotron text-center">
  <div class="container field form-group">
    <h1>Github search</h1>
    <%= form_tag(home_path, method: :get) do  %>
      <%= text_field_tag(:search, params[:search], placeholder: "Type something...", class: "form-control-sm") %>
      <%= submit_tag "Search", name: nil, class: "actions", disabled: true, data: { disable_with: false }%>
    <% end %>
    <p>Search more than 28M public repositories</p>
  </div>
</section>
<div class="album py-5 bg-light">
  <% if @result.success %>
    <div class="container">
      <div class="row">
        <% if params[:search] && @result.items.empty? %>
          <div><p>nothing was found =(</p></div>
        <% else %>
          <% for repo in @result.items %>
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <p><%= repo.full_name %></p>
                  <div class="row">
                    <div class="col-md-6 text-center">
                      <span class="float-md-left"><%= repo.language%></span>
                      <span class="float-md-right">Updated on <%= repo.pushed_at %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div><%= will_paginate @result.items %></div>
    </div>
  <% else %>
    <div class="container">
      <h1>An error has ocurred, please try again later...</h1>
      <p><%= @result.error_msg %></p>
    </div>
  <% end %>
</div>
